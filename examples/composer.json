{
  "description": "testing yoti-php-sdk",
  "require": {
    "yoti/yoti-php-sdk": "^2.2.0",
    "symfony/dotenv": "3.3.0"
  },
  "repositories": [
    {
      "type": "path",
      "url": "./sdk",
      "options": {
        "symlink": true
      }
    }
  ],
  "scripts": {
    "pre-install-cmd": "@copy-sdk",
    "pre-update-cmd": "@copy-sdk",
    "copy-sdk": "rm -fr ./sdk && mkdir ./sdk && cd ../ && cp -r `ls -A | grep -v 'examples'` ./examples/sdk/ && cd -"
  }
}
